<% if line_item %>
  <% item = Product.find_by(id: line_item.product_id) %>
  <% item_total = item.price * line_item.quantity %>
  <% @order_total += item_total %>

  <tbody>

    <tr>
      <td>
        <%= image_tag item.image.tiny %>
      </td>
      <td>
        <h4><%= item.name %></h4>
        <br>
        <p><%= item.description %></p>
      </td>
      <td>
        <%= item.price %>
      </td>
      <td>
        <%= line_item.quantity %>
      </td>
      <td>
        <%= item.price * line_item.quantity %>
      </td>
    </tr>
  </tbody>
<% end %>
