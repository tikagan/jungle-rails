<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">User: <%= review.user.firstname %> <%= review.user.lastname %></h4>
  </div>
  <div class="panel-body">
    <p><%= review.description %></p>
    <strong><p><%= review.rating %>/10</p></strong>
  </div>
  <% if current_user %>
    <div>
      <%= link_to fa_icon('trash'), product_reviews_path(@product), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>
