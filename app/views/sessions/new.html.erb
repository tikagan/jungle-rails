<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Login</h1>
  </div>
  <div class="col-sm-12 col-sm-offset-0">
    <div class="panel-body">
      <%= form_tag '/login' do %>
        Email: <%= text_field_tag :email %>
        Password: <%= password_field_tag :password %>
        <%= submit_tag "Submit" %>
      <% end %>
    </div>
  </div>
</div>
